mixin _avatar(data={})
  if (data.img)
    img.img-cover(
      src=`@img/avatars/${data.img}.jpg`,
      srcset=`@img/avatars/${data.img}@2x.jpg 2x`,
      width="48",
      height="48",
      alt="")
  if (data.text)
    span.avatar__text!=data.text

mixin avatar(data={})
  if (data.href)
    a.avatar(class=data.className href=data.href)
      +_avatar(data)
  else
    .avatar(class=data.className)
      +_avatar(data)